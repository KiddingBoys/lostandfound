<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
<include layout="@layout/top_back"/>

<ScrollView 
     android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout
         android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:layout_gravity="top"
            android:orientation="vertical" 
        >
<RelativeLayout
                android:id="@+id/activtiy_content"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_marginTop="5dip"
                android:background="@drawable/tm_button_white_bg"
                android:clickable="true"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tv_tv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                      android:text="标题："
                      
                  android:textColor="#202020"
                  
                    android:textSize="14sp"
                    android:scaleType="fitXY" />

                
                <TextView
                    android:id="@+id/tv_newsdetail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_toRightOf="@id/tv_tv_left"
                    android:background="@null"
                    android:maxLength="200"
                    android:padding="8dp"
                    android:text="详细内容"
                    android:textColor="#202020"
                    android:textSize="14sp" />
           
            </RelativeLayout>

    
    
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/iv_newsdetail_newsimg"
                        android:layout_width="fill_parent"
                        android:layout_height="240dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_main_topimg" />
                </RelativeLayout>


                    
                
<RelativeLayout
                android:id="@+id/activtiy_content"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dip"
                android:background="@drawable/tm_button_white_bg"
                android:clickable="true"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tv_newsdetail_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@null"
                    android:maxLength="1200"
                    android:padding="8dp"
                    android:text="详细内容"
                    android:textColor="#202020"
                    android:textSize="14sp" />
            </RelativeLayout>
            </LinearLayout>

</ScrollView>
</LinearLayout>
