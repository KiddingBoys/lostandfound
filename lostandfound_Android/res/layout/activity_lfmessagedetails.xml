<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_dialog_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/include_top_bar" />

    <com.kidding.lostandfound.ui.MyScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/iv_lfmsg_details_infoimg"
                        android:layout_width="fill_parent"
                        android:layout_height="240dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_main_topimg" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_lfmessage_details_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dip"
                        android:layout_marginTop="215dip"
                        android:text="找到钥匙串"
                        android:textColor="#fff"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_lfmessage_details_tel"
                        style="@style/Smile.TextView._White"
                        android:layout_alignParentRight="true"
                        android:layout_alignRight="@id/tv_lfmessage_details_title"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="215dip"
                        android:background="@color/green"
                        android:drawableLeft="@drawable/icon_photo"
                        android:drawablePadding="5dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="3dp"
                        android:text="138024249542"
                        android:textSize="12sp" >
                    </TextView>
                </RelativeLayout>
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/activtiy_content"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dip"
                android:background="@drawable/tm_button_white_bg"
                android:clickable="true"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/mtv_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/icon_lfmsg_details_poster"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_lfmessage_details_poster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_toRightOf="@id/mtv_03"
                    android:background="@null"
                    android:maxLength="200"
                    android:padding="8dp"
                    android:text="poster"
                    android:textColor="#202020"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activtiy_content"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dip"
                android:background="@drawable/tm_button_white_bg"
                android:clickable="true"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/mtv_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/s_n_dynamic_btn_gps_selected"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_lfmessage_details_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_toRightOf="@id/mtv_03"
                    android:background="@null"
                    android:maxLength="200"
                    android:padding="8dp"
                    android:text="位置信息"
                    android:textColor="#202020"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activtiy_content"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dip"
                android:background="@drawable/tm_button_white_bg"
                android:clickable="true"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/mtv_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/icon_lfmsg_details_time"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_lfmessage_details_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_toRightOf="@id/mtv_03"
                    android:background="@null"
                    android:maxLength="200"
                    android:padding="8dp"
                    android:text="时间信息"
                    android:textColor="#202020"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activtiy_content"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dip"
                android:background="@drawable/tm_button_white_bg"
                android:clickable="true"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tv_lfmessage_details_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@null"
                    android:maxLength="200"
                    android:padding="8dp"
                    android:text="详细内容"
                    android:textColor="#202020"
                    android:textSize="14sp" />
            </RelativeLayout>

        <RelativeLayout
      
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dip"
                android:background="@drawable/tm_button_white_bg"
                android:clickable="true"
                android:gravity="center_vertical" >


                <TextView
      
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                 
                    android:background="@null"
                    android:maxLength="200"
                    android:padding="8dp"
                    android:text="评论"
                    android:textColor="#202020"
                    android:textSize="14sp" />
            </RelativeLayout>

            <com.kidding.lostandfound.ui.MyListView
                android:id="@+id/lv_lfmessage_details_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/graycolor"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false"
                android:scrollbars="none" />
            <TextView 
                 android:layout_width="fill_parent"
                android:layout_height="10dp"
                />
            
            <RelativeLayout
        android:id="@+id/rl_lfmsg_detail_sendcomment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" >

        <com.kidding.lostandfound.ui.KeyboardListenEdittext
            android:id="@+id/et_lfmsg_details_commentmessage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@+id/btn_lfmsg_details_sendcomment"
            android:background="@drawable/edit_bg"
            android:hint="评论:"
            android:maxHeight="120dip"
            android:paddingLeft="10dip"
            android:textColor="#000000"
            android:textSize="18sp" />

 

        <Button
            android:id="@+id/btn_lfmsg_details_sendcomment"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="2dip"
            android:layout_marginTop="1dip"
            android:background="@color/blue_system"
            android:text="发送"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>
    
            
              <Button
                android:id="@+id/btn_lfmsg_details_complete"
                android:layout_width="fill_parent"
                android:layout_height="50dip"

                android:layout_marginTop="10dp"
                android:background="@drawable/buttonstyle"
                android:layout_weight="1"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:text="完成帖子"
                android:textColor="#ff2a5dcd"
                android:textSize="20sp" />
            <Button 
         android:id="@+id/btn_lfmsg_details_delete"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_marginTop="15dip"
        android:text="删除帖子"
        android:textColor="@color/lightwhite"
        android:textSize="20sp"   
        android:background="@drawable/button_exit_askfor"  
         
         
         />
        </LinearLayout>
        
        
    </com.kidding.lostandfound.ui.MyScrollView>

    

</LinearLayout>