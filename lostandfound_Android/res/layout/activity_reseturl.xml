<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    
<include layout="@layout/top_back"/>
<LinearLayout 
           android:id="@+id/layout_publish_lfmessage_category"
            android:layout_width="fill_parent"
           android:layout_height="50dip" 
           android:layout_marginTop="10dip" 
           android:orientation="horizontal"
           android:background="@color/white"
            >          
          
               <TextView
                    android:id="@+id/tv_url_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                     
                    android:layout_centerVertical="true"
                                                  
                    android:text="当前IP端口号："
                    android:textColor="@color/black"
                    android:textSize="15sp" /> 
                     <TextView
                    android:id="@+id/tv_url_url_ip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                     
                    android:layout_centerVertical="true"                            
                    android:text="192.168.227.172:8081"
                    android:textColor="@color/blue_system"
                    android:textSize="15sp" /> 

        </LinearLayout>
    <RelativeLayout
      				    android:id="@+id/activtiy_subject"
            			android:layout_width="fill_parent"
            			android:layout_height="50dip"
            			android:gravity="center_vertical"
            		    android:layout_marginTop="10dip"
            			android:clickable="true"
            			android:background="@drawable/tm_button_white_bg" >
            			
            			    <EditText
            			        android:id="@+id/et_url_newurl"
            			        android:layout_width="wrap_content"
            			        android:layout_height="wrap_content"
            			        android:layout_centerVertical="true"
            			        android:layout_marginLeft="10dip"
            			        android:layout_marginRight="10dip"
            			        android:background="@null"
            			        android:hint="输入新ip和端口号,格式如上方蓝色部分"
            			        android:maxLength="20"
            			        android:padding="8dp"
            			        android:singleLine="true"
            			        android:text=""
            			        android:textColor="#202020"
            			        android:textSize="14sp" />
										
      				</RelativeLayout>
      				<RelativeLayout 
           android:id="@+id/layout_url_ok"
            android:layout_width="fill_parent"
           android:layout_height="50dip" 
           android:layout_marginTop="10dip" 
           android:clickable="true"
           android:background="@color/topcolor"
            >          
          
               <TextView
                    android:id="@+id/tv_url_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                     
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"                                
                    android:text="修改"
                    android:textColor="@color/white"
                    android:textSize="15sp" /> 

        </RelativeLayout>
</LinearLayout>
